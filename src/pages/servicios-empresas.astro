---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServicesGrid from "../components/ServicesGrid.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Servicios para Empresas · Manríquez Rivera">
  <!-- Hero Section -->
  <section class="relative bg-linear-to-br from-primary via-primary-light to-primary py-20 px-6">
    <div class="max-w-container mx-auto text-center text-white">
      <h1 class="text-white text-2xl md:text-3xl lg:text-[38px] font-bold leading-tight mb-4">
        Servicios para Empresas
      </h1>
      <p class="text-lg md:text-xl text-white/90 max-w-3xl mx-auto">
        Asesoría legal integral especializada en el ámbito empresarial
      </p>
    </div>
  </section>

  <!-- Todos los Servicios Empresas -->
  <ServicesGrid tipo="empresas" showTitle={false} />

  <Footer />
</BaseLayout>
